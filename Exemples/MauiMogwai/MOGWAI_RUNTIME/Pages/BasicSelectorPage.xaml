<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:classes="clr-namespace:MOGWAI_RUNTIME.Classes"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MOGWAI_RUNTIME.Pages.BasicSelectorPage"
             Title="BasicSelectorPage"
             Background="WhiteSmoke"
             Loaded="ContentPage_Loaded"
             Unloaded="ContentPage_Unloaded">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource ApplicationBackground}" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto,*" >

        <!-- TITLE -->

        <Grid ColumnDefinitions="50,*,50" RowDefinitions="50" BackgroundColor="{StaticResource ApplicationBackground}">

            <Path x:Name="CancelPath" WidthRequest="30" HeightRequest="30" Grid.Column="0" Aspect="Uniform" VerticalOptions="Center" HorizontalOptions="Center" Fill="LightGreen" Data="M9.9000245,6.000003L6.0000001,9.8999988 12.100037,16.000007 6.0000001,22.100002 9.9000245,25.999997 16,19.900018 22.100037,25.999997 26,22.100002 19.900024,16.000007 26,9.8999988 22.100037,6.000003 16,12.099997z M16,0C24.799988,0 32,7.2000005 32,16.000007 32,24.800016 24.799988,32.000001 16,32.000001 7.2000123,32.000001 8.3946347E-08,24.800016 0,16.000007 8.3946347E-08,7.2000005 7.2000123,0 16,0z" >
                <Path.GestureRecognizers>
                    <TapGestureRecognizer x:Name="CancelPathTapGesture" Tapped="CancelPathTapGesture_Tapped" />
                </Path.GestureRecognizers>
            </Path>

            <Path x:Name="ValidatelPath" WidthRequest="30" HeightRequest="30" Grid.Column="2" Aspect="Uniform" VerticalOptions="Center" HorizontalOptions="Center" Margin="5" Fill="LightGreen" Data="M22.785004,8.4599915L13.740021,17.51001 9.2100067,12.980011 6.2000122,16 13.740021,23.545013 25.804993,11.480011z M16,0C24.834991,0 32,7.1700134 32,16 32,24.834991 24.834991,32 16,32 7.1699982,32 0,24.834991 0,16 0,7.1700134 7.1699982,0 16,0z" >
                <Path.GestureRecognizers>
                    <TapGestureRecognizer x:Name="ValidatePathTapGesture" Tapped="ValidatePathTapGesture_Tapped" />
                </Path.GestureRecognizers>
            </Path>

            <Label x:Name="TitleLabel" TextColor="White" Text="TITLE" Grid.Column="1" HorizontalTextAlignment="Center" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" />

        </Grid>

        <!-- DIALOG -->

        <CollectionView x:Name="ItemsCollectionView" Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="Single" Margin="5" >

            <CollectionView.ItemTemplate>

                <DataTemplate x:DataType="x:String">

                    <Grid Padding="2">
                        
                        <Label Text="{Binding}" InputTransparent="False" Padding="5" VerticalOptions="Center" TextColor="Black" />
                    
                    </Grid>

                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>

</ContentPage>